<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp3.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp3"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiApp3">

    <Shell.TitleView>
        <HorizontalStackLayout Margin="10" HorizontalOptions="Center" VerticalOptions="Fill" >
            <Image Source="Resources/Images/dotnet_bot.png" HeightRequest="48" WidthRequest="48" />
            <Label VerticalOptions="Center" VerticalTextAlignment="Center" Text="Maui App 3" FontSize="20" ></Label>
        </HorizontalStackLayout>
    </Shell.TitleView>

    <Shell.ToolbarItems>
        <ToolbarItem x:Name="Share" IconImageSource="Resources/Images/dotnet_bot.png" />
        <ToolbarItem x:Name="Feedback" IconImageSource="Resources/Images/dotnet_bot.png"/>
    </Shell.ToolbarItems>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
